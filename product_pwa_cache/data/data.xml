<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <function model="ir.model.data" name="_update_xmlids">
            <value model="base" eval="[{
                'xml_id': 'product_pwa_cache.product.field.image_small',
                'record': obj().env['ir.model.fields'].search([('model_id', '=', obj().env.ref('product.model_product_product').id), ('name', '=', 'image_small')], limit=1),
                'noupdate': False,
            },{
                'xml_id': 'product_pwa_cache.product.field.image_variant',
                'record': obj().env['ir.model.fields'].search([('model_id', '=', obj().env.ref('product.model_product_product').id), ('name', '=', 'image_variant')], limit=1),
                'noupdate': False,
            }]"/>
        </function>

        <record id="pwa_cache_product_product_no_big_images" model="pwa.cache">
            <field name="name">Products (All - No Extra Images)</field>
            <field name="cache_type">model</field>
            <field name="model_id" ref="product.model_product_product"/>
            <field name="model_field_excluded_ids" eval="[(6, 0, [ref('product_pwa_cache.product.field.image_small'), ref('product_pwa_cache.product.field.image_variant')])]"/>
        </record>

        <record id="pwa_cache_model_product_attribute_value_all" model="pwa.cache">
            <field name="name">Product Attribute Value (All)</field>
            <field name="cache_type">model</field>
            <field name="model_id" ref="product.model_product_attribute_value"/>
        </record>

        <record id="pwa_cache_model_product_pricelist_all" model="pwa.cache">
            <field name="name">Product Pricelists (All)</field>
            <field name="cache_type">model</field>
            <field name="model_id" ref="product.model_product_pricelist"/>
        </record>

        <!-- <record id="pwa_cache_model_product_pricelist_item_all" model="pwa.cache">
