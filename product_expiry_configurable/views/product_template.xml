<odoo>

    <record model="ir.ui.view" id="view_product_form_expiry">
        <field
            name="name"
        >product.template.form (in product_expiry_life_configurable)</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product_expiry.view_product_form_expiry" />
        <field name="arch" type="xml">
            <label for="use_time" position="before">
                <field name="compute_dates_from" />
            </label>
            <xpath expr="//field[@name='life_time']/.." position="attributes">
                <attribute
                    name="attrs"
                >{'invisible': [('compute_dates_from', '=', 'life_date')]}</attribute>
            </xpath>
             <label for="life_time" position="attributes">
                <attribute
                    name="attrs"
                >{'invisible': [('compute_dates_from', '=', 'life_date')]}</attribute>
            </label>
            <xpath expr="//field[@name='alert_time']/.." position="after">
                <separator />

                <field name="specific_compute_dates_from" />
                <label for="specific_use_time" />
                <div>
                    <field name="specific_use_time" class="oe_inline" />
                    <span> days</span>
                </div>
                <label
                    for="specific_life_time"
                    attrs="{'invisible': [('compute_dates_from', '==', 'life_date')]}"
                />
                <div attrs="{'invisible': [('compute_dates_from', '==', 'life_date')]}">
                    <field name="specific_life_time" class="oe_inline" />
                    <span> days</span>
                </div>
                <label for="specific_removal_time" />
                <div>
                    <field name="specific_removal_time" class="oe_inline" />
                    <span> days</span>
                </div>
                <label for="specific_alert_time" />
                <div>
                    <field name="specific_alert_time" class="oe_inline" />
                    <span> days</span>
                </div>
            </xpath>
        </field>
    </record>


</odoo>
