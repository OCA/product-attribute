<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record model="ir.ui.view" id="product_attributes_form_view">
      <field name="name">product.attributes.normal.wizard</field>
      <field name="model">product.product</field>
      <field name="arch" type="xml">
          <form string="Product">
              <group name="name_set">
                  <field name="name"/>
                  <field name="attribute_set_id" />
              </group>
              <separator string="attributes_placeholder" colspan="4"/>
              <footer>
                <button name="save_and_close_product_attributes"
                        string="Save and Close" type="object" class="oe_highlight"/>
                or
                <button special="cancel" string="Cancel" class="oe_link"/>
              </footer>
          </form>
      </field>
    </record>

  </data>
</odoo>
