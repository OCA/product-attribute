<odoo>
	<record id="email_template_product_registration_expiry" model="mail.template">
	    <field name="name">Product Registration Expiry Reminder</field>
	    <field name="model_id" ref="model_product_identification" />
	    <field name="subject">Product Registration Expiry Notification</field>
	    <field name="body_html" type="html">
	    	<div>
                <p>Dear <t t-out="ctx.get('name')" />,</p>
                <p
                >This is a reminder that the product identification with the ID number <t
                        t-out="object.name"
                    /> for the product <t
                        t-out="object.product_id.name"
                    /> is expiring on <t
                        t-out="object.expiry_date"
                        t-options='{"widget": "date"}'
                    /></p>
                <p>Please take the necessary actions.</p>
            </div>
	    </field>
	    <field name="email_to" />
	</record>

</odoo>
