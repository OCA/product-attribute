<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <record model="ir.ui.view" id="product_normal_form_inh_product_customer_code_01">
        <field name="name">product.normal.form.inh.product.customer.code.01</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_information']" position="after">
                <page string="Customer Code" name="customer_code">
                     <field name="product_customer_code_ids" nolabel="1">
                        <tree string="Product Customer Code" editable="bottom">
                            <field name="product_code"/>
                            <field name="partner_id"/>
                        </tree>
                        <form string="Product Customer Code">
                            <group>
                                <field name="product_code"/>
                                <field name="partner_id"/>
                            </group>
                        </form>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
    <record id="invoice_form_with_product_partner_id" model="ir.ui.view">
      <field name="name">account.invoice.form.product.context</field>
      <field name="model">account.invoice</field>
      <field name="inherit_id" ref="account.invoice_form"/>
      <field name="arch" type="xml">
        <!-- <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="before"> -->
        <!--   <field name="partner_id" invisible='1'/> -->
        <!-- </xpath> -->
        <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="attributes">
          <attribute name="context">{'partner_id': parent.partner_id}</attribute>
        </xpath>
      </field>
    </record>

</odoo>
