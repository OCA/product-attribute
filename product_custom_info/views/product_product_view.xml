<odoo>
    <record id="product_normal_form_view" model="ir.ui.view">
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//notebook[1]">
                <page name="custom_info" string="Custom Information">
                    <group string="Variant info">
                        <group>
                            <field
                                name="custom_info_template_id"
                                options='{"no_quick_create": True}'
                            />
                        </group>
                        <field
                            name="custom_info_ids"
                            colspan="4"
                            nolabel="1"
                            context="{'embed': True, 'tree_view_ref': 'base_custom_info.custom_info_value_tree_editable'}"
                        />
                    </group>
                    <group string="Product template info">
                        <p>This info is managed on<button
                                name="open_product_template"
                                type="object"
                                string="the product template"
                                class="oe_link"
                            /></p>
                        <field
                            name="product_tmpl_custom_info_ids"
                            colspan="4"
                            nolabel="1"
                            context="{'embed': True, 'tree_view_ref': 'base_custom_info.custom_info_value_tree_editable'}"
                        />
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
