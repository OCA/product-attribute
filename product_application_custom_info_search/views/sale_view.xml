<odoo>
    <record id="view_order_form_search_application" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <header position="inside">
                <button name="open_filter_application_wizard" type="object" string="Set Application"/>
            </header>
            <xpath expr="//field[@name='order_line']" position="after">
                <field name="application_product_tmpl_ids" invisible="True"/>
                <field name="filtered_applications" invisible="True"/>
            </xpath>
            <xpath expr="//field[@name='order_line']//tree//field[@name='product_id']" position="attributes">
                <attribute name="domain">['|', ('product_tmpl_id', 'in', parent.application_product_tmpl_ids), ('sale_ok', '=', not parent.filtered_applications), ('sale_ok', '=', True)]</attribute>
            </xpath>
        </field>
    </record>
</odoo>
