<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_product_search_by_application_order" model="ir.ui.view">
        <field name="name">Product Search by Application</field>
        <field name="model">filter.application.wizard</field>
        <field name="arch" type="xml">
            <form string="Product Search by Application">
                <group>
                    <field name="filter_line_ids">
                        <tree>
                            <field name="property_id" />
                            <field name="value_id" />
                        </tree>
                    </field>
                </group>
                <footer>
                    <button name="apply_filters" string="Apply Filters" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="view_product_search_by_application" model="ir.ui.view">
        <field name="name">Product Search by Application</field>
        <field name="model">filter.application.wizard</field>
        <field name="arch" type="xml">
            <form string="Product Search by Application">
                <p class="oe_grey">
                    Create filter
                </p>
                <group>
                    <field name="filter_line_ids">
                        <tree>
                            <field name="property_id" />
                            <field name="value_id" />
                        </tree>
                    </field>
                </group>
                <footer>
                    <button name="apply_filters" string="Apply Filters" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="view_product_search_by_application_line" model="ir.ui.view">
        <field name="name">Product Search by Application Line</field>
        <field name="model">filter.application.line.wizard</field>
        <field name="arch" type="xml">
            <form string="Product Search by Application Line">
                <group>
                    <field name="property_id" required="1"/>
                    <field name="value_id" required="1"/>
                </group>
            </form>
        </field>
    </record>

    <record id="action_view_search_by_application" model="ir.actions.act_window">
        <field name="name">Search by Application</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">filter.application.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <!-- <field name="groups_id" eval="[(4,ref('sales_team.group_sale_salesman'))]"/>
        TODO: check if we need this-->
        <!-- <field name="binding_model_id" ref="product.model_product_template" /> -->
    </record>

    <menuitem id="search_product_by_application_menu" action="action_view_search_by_application" parent="sale.product_menu_catalog"/>

</odoo>
