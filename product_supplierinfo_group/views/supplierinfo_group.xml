<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="supplierinfo_group_view_form" model="ir.ui.view">
        <field name="name">supplierinfo_group_view_form</field>
        <field name="model">product.supplierinfo.group</field>
        <field name="arch" type="xml">
            <form string="supplierinfo_group_form">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="product_id"/>
                        <field name="product_name"/>
                        <field name="product_code"/>
                    </group>
                    <group>
                        <field name="supplierinfo_ids">
                            <tree editable="bottom">
                                <field name="min_qty"/>
                                <field name="price"/>
                                <field name="date_start"/>
                                <field name="date_end"/>
                                <field name="delay"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
