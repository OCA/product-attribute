<openerp><data>

        <!-- UNIT OF MEASURE -->
        <!-- Form view -->
        <record id="product_uom_form_view_inherit_product_uom_use_type" model="ir.ui.view">
            <field name="model">product.uom</field>
            <field name="inherit_id" ref="product.product_uom_form_view"/>
            <field name="arch" type="xml">
                <field name="active" position="after">
                    <field name="use_type" />
                </field>
            </field>
        </record>

        <!-- Tree view -->
        <record id="product_uom_tree_view_inherit_product_uom_use_type" model="ir.ui.view">
            <field name="model">product.uom</field>
            <field name="inherit_id" ref="product.product_uom_tree_view"/>
            <field name="arch" type="xml">
                <field name="category_id" position="after">
                    <field name="use_type" />
                </field>
            </field>
        </record>

</data></openerp>