<?xml version="1.0"?>
<odoo>
    <!-- ir cron form view -->
    <record id="ir_cron_product_eol_view_form" model="ir.ui.view">
        <field name="name">ir.cron.product.eol.view.form</field>
        <field name="model">ir.cron</field>
        <field name="inherit_id" ref="base.ir_cron_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='action_wrapper']" position="inside">
                <group attrs="{'invisible': [('code','!=','model.send_notify_product_eol()')]}">
                    <label for="approaching_number" string="Approaching Eol Interval"/>
                    <div>
                        <field name="approaching_number" class="oe_inline"/>
                        <field name="approaching_type" class="oe_inline"/>
                    </div>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
