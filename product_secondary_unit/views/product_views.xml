<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">Product template Secondary Unit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_information']/group[2]" position="after">
                <group string="Secondary Unit of Measure" group_id="uom.group_uom">

                </group>
                <field name="secondary_uom_ids" nolabel="1" group_id="uom.group_uom">
                    <tree editable="top" decoration-muted="(not active)">
                        <field name="active" widget="boolean_toggle" />
                        <field name="code" />
                        <field name="name" />
                        <field name="uom_id" />
                        <field name="factor" />
                        <field name="dependency_type" />
                    </tree>
                </field>
            </xpath>
        </field>
    </record>
</odoo>
