<odoo>
    <record id="product_template_only_form_view" model="ir.ui.view">
        <field name="name">Product template Secondary Unit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="groups_id" eval="[(4, ref('uom.group_uom'))]" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_information']" position="inside">
                <group string="Secondary Unit of Measure">
                    <field name="secondary_uom_ids" nolabel="1">
                        <tree editable="bottom" decoration-muted="(not active)">
                            <field name="active" widget="boolean_toggle" />
                            <field name="product_tmpl_id" invisible="1" />
                            <field
                                name="product_id"
                                domain="[('product_tmpl_id', '=', parent.id)]"
                                groups="product.group_product_variant"
                                options="{'no_create': True}"
                                attrs="{'column_invisible': [('parent.product_variant_count', '&lt;=', 1)]}"
                            />
                            <field name="code" />
                            <field name="name" />
                            <field name="uom_id" />
                            <field name="factor" />
                            <field name="dependency_type" />
                        </tree>
                    </field>
                </group>
            </xpath>
        </field>
    </record>

    <record id="product_normal_form_view" model="ir.ui.view">
        <field name="name">Product Secondary Unit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="groups_id" eval="[(4, ref('uom.group_uom'))]" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_information']" position="inside">
                <group string="Variant Specific Secondary Unit of Measure">
                    <field
                        name="secondary_uom_ids"
                        nolabel="1"
                        context="{'default_product_tmpl_id': product_tmpl_id}"
                    >
                        <tree editable="bottom" decoration-muted="(not active)">
                            <field name="active" widget="boolean_toggle" />
                            <field name="product_tmpl_id" invisible="1" />
                            <field
                                name="product_id"
                                domain="[('product_tmpl_id', '=', parent.id)]"
                                groups="product.group_product_variant"
                                options="{'no_create': True}"
                                attrs="{'column_invisible': [('parent.product_variant_count', '&lt;=', 1)]}"
                            />
                            <field name="code" />
                            <field name="name" />
                            <field name="uom_id" />
                            <field name="factor" />
                            <field name="dependency_type" />
                        </tree>
                    </field>
                </group>
            </xpath>
        </field>
    </record>

    <record id="product_variant_easy_edit_view" model="ir.ui.view">
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_variant_easy_edit_view" />
        <field name="groups_id" eval="[(4, ref('uom.group_uom'))]" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='weight']/.." position="after">
                <field name="product_tmpl_id" invisible="1" />
                <group string="Secondary Unit of Measure" name="secondary_uom">
                    <group name="default_secondary_uom" />
                    <group colspan="2">
                        <field
                            name="secondary_uom_ids"
                            nolabel="1"
                            context="{'default_product_tmpl_id': product_tmpl_id}"
                        >
                            <tree editable="bottom" decoration-muted="(not active)">
                                <field name="active" widget="boolean_toggle" />
                                <field name="product_tmpl_id" invisible="1" />
                                <field name="product_id" invisible="1" />
                                <field name="code" />
                                <field name="name" />
                                <field name="uom_id" />
                                <field name="factor" />
                                <field name="dependency_type" />
                            </tree>
                        </field>
                    </group>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
