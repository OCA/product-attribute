<odoo>

<record id="view_product_brand_form" model="ir.ui.view">
    <field name="name">product.brand.form</field>
    <field name="model">product.brand</field>
    <field name="inherit_id" ref="product_brand.view_product_brand_form" />
    <field name="arch" type="xml">
        <xpath expr="//sheet" position="inside">
            <group name="supplier_discount" string="Supplier Discounts" colspan="4">
                <field name="supplier_discount_ids" nolabel="1" colspan="4">
                    <tree string="Suplier Discounts" editable="bottom">
                        <field name="partner_id" />
                        <field name="discount" />
                    </tree>
                </field>
            </group>
        </xpath>
    </field>
</record>

<record model="ir.ui.view" id="product_supplierinfo_form_view_brand_disc">
     <field name="model">product.supplierinfo</field>
     <field name="inherit_id" ref="product.product_supplierinfo_form_view"/>
     <field name="arch" type="xml">
          <xpath expr="//div[field[@name='price']]" position="after">
              <field name="fixed_discount"/>
              <field name="set_fixed_discount"/>
          </xpath>
     </field>
 </record>

</odoo>
