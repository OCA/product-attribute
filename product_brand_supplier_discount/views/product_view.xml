<odoo>

<record id="view_product_brand_form" model="ir.ui.view">
    <field name="name">product.brand.form</field>
    <field name="model">product.brand</field>
    <field name="inherit_id" ref="product_brand.view_product_brand_form" />
    <field name="arch" type="xml">
        <xpath expr="//sheet" position="inside">
            <group name="supplier_discount" string="Supplier Discounts" colspan="4">
                <field name="supplier_discount_ids" nolabel="1" colspan="4">
                    <tree string="Suplier Discounts" editable="bottom">
                        <field name="partner_id" />
                        <field name="discount" />
                    </tree>
                </field>
            </group>
        </xpath>
    </field>
</record>

</odoo>
