<odoo>

    <record model="ir.ui.view" id="product_state_form_view">
        <field name="name">product.state.form (in product_state_active)</field>
        <field name="model">product.state</field>
        <field name="inherit_id" ref="product_state.view_product_state_form" />
        <field name="arch" type="xml">
            <field name="code" position="after">
                <field name="deactivate_product" />
                <field name="activate_product" />
            </field>
        </field>
    </record>

</odoo>
