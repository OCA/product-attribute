<odoo>

    <record id="product_template_only_form_view" model="ir.ui.view">
        <field name="name">product.template.only.form (in product_attribute_group)</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='variants']//tree//field[@name='attribute_id']" position="after">
                <field name="attr_group_ids" widget="many2many_tags" options="{'no_create_edit': True}" domain="[('attribute_id', '=', attribute_id)]" context="{'default_attribute_id': attribute_id}"/>
            </xpath>
        </field>
    </record>

</odoo>
