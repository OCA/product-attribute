<odoo>
  <record id="product_template_tree_view" model="ir.ui.view">
    <field name="name">product.template.tree</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_tree_view" />
    <field name="arch" type="xml">
      <field name="categ_id" position="after">
        <field
          name="abc_product_classification_level_ids"
          optional="hide"
          widget="many2many_tags"
          attrs="{'invisible':[('type','!=','product')]}"
        />
      </field>
    </field>
  </record>
  <record id="product_template_form_view" model="ir.ui.view">
    <field name="name">product.template.form (ABC Classification)</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_form_view" />
    <field name="arch" type="xml">
      <xpath expr="//notebook" position="inside">
        <page string="ABC Classification" name="abc_classification">
          <group>
            <group>
              <field
                name="abc_product_classification_level_ids"
                widget="many2many_tags"
              />
              <field name="abc_classification_profile_ids" widget="many2many_tags" />
            </group>
          </group>
        </page>
      </xpath>
    </field>
  </record>
</odoo>
