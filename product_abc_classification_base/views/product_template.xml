<odoo>
  <record id="product_template_form_view" model="ir.ui.view">
    <field name="name">product.template.form (ABC Classification)</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_form_view" />
    <field name="arch" type="xml">
      <xpath expr="//notebook" position="inside">
        <page string="ABC Classification" name="abc_classification" attrs="{'invisible':[('type','!=','product')]}">
          <group>
            <group>
              <field
                name="abc_classification_product_level_ids"
                widget="many2many_tags"
                context="{'default_product_tmpl_id': active_id, 'default_profile_id': abc_classification_profile_ids[0] and abc_classification_profile_ids[0][2] and abc_classification_profile_ids[0][2][0] or False}"
                options="{'open': true}"
                attrs="{'readonly': [('product_variant_count', '&gt;', 1)]}"
                domain="[('product_tmpl_id', '=', active_id)]"
              />
              <field name="abc_classification_profile_ids" widget="many2many_tags" options="{'open': true}"/>
            </group>
          </group>
        </page>
      </xpath>
    </field>
  </record>
</odoo>
