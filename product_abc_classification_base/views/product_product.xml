<odoo>
  <record id="product_product_form_view" model="ir.ui.view">
    <field name="name">product.product.form (ABC Classification)</field>
    <field name="model">product.product</field>
    <field name="inherit_id" ref="product.product_normal_form_view" />
    <field name="arch" type="xml">
      <field
        name="abc_classification_product_level_ids" position="attributes">
          <attribute name="context">{'default_product_id': active_id, 'default_profile_id': abc_classification_profile_ids and abc_classification_profile_ids[0] and abc_classification_profile_ids[0][2] and abc_classification_profile_ids[0][2][0] or False}</attribute>
          <attribute name="attrs">{'read_only': False}</attribute>
          <attribute name="domain">[('product_id', '=', active_id)]</attribute>
      </field>
    </field>
  </record>
</odoo>
