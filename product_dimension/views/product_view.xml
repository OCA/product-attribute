    <record model="ir.ui.view" id="product_template_only_form_view">
        <field name="name">product.template.dimensions</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="stock.view_template_property_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='tracking']" position="after">
                <label string="Dimensions"
                        help="Choose unit of measure, set dimensions. Volume will be calculated automaticaly."
                        attrs="{'invisible':['|', ('type', 'not in', ['product', 'consu']), ('product_variant_count', '&gt;', 1)]}"/>
                <div class="o_row" attrs="{'invisible':['|', ('type', 'not in', ['product', 'consu']), ('product_variant_count', '&gt;', 1)]}">
                    <strong style="padding: 0 1px 0 0;">L</strong>
                    <field name="length"/>
                    <strong style="padding: 0 1px 0 5px;">W</strong>
                    <field name="width"/>
                    <strong style="padding: 0 1px 0 5px;">H</strong>
                    <field name="height"/>
                    <field name="dimensional_uom_id" placeholder="UoM"/>
                </div>
            </xpath>
            <xpath expr="//field[@name='volume']" position="attributes">
                <attribute name="readonly">0</attribute>
            </xpath>
        </field>
    </record>

</odoo>
