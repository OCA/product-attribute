<odoo>

    <record model="ir.ui.view" id="product_template_form_view">
        <field
            name="name"
        >product.template.form (in stock_production_lot_expiry)</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product_expiry.view_product_form_expiry" />
        <field name="arch" type="xml">
           <xpath expr='//field[@name="alert_time"]/parent::div' position='after'>
                <label for="lot_expiry_field_name" />
                <div>
                    <field name="lot_expiry_field_name" class="oe_inline" />
                </div>
                <label for="specific_lot_expiry_field_name" />
                <div>
                    <field name="specific_lot_expiry_field_name" class="oe_edit_only" />
                </div>
           </xpath>
        </field>
    </record>



</odoo>
