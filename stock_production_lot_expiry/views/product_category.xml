<odoo>

    <record model="ir.ui.view" id="product_category_form_view">
        <field name="name">product.category.form (in stock_production_lot_expiry)</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view"/>
        <field name="arch" type="xml">
            <group name="first" position="after">
                <group name="product_expiry" string="Lot expiry" groups="stock.group_production_lot">
                    <field name="lot_expiry_field_name"/>
                    <field name="specific_lot_expiry_field_name" class="oe_edit_only"/>
                </group>
            </group>
        </field>
    </record>

</odoo>
