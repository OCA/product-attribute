<odoo>

    <record model="ir.ui.view" id="stock_lot_form_view">
        <field name="name">stock.lot.form (in stock_production_lot_expiry)</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="product_expiry.view_move_form_expiry" />
        <field name="arch" type="xml">
            <field name="removal_date" position="after">
                <field name="expiry_date" />
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="stock_lot_search_view">
        <field name="name">stock.lot.search (in stock_production_lot_expiry)</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.search_product_lot_filter" />
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <filter
                    name="expired"
                    string="Expired"
                    domain="[('product_expiry_alert', '=', True)]"
                    help="Expired lots"
                />
                <filter
                    name="not_expired"
                    string="Not Expired"
                    domain="[('product_expiry_alert', '=', False)]"
                    help="Not expired lots and lots no subject to expiration"
                />
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="stock_lot_tree_view">
        <field name="name">stock.lot.tree (in stock_production_lot_expiry)</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_tree" />
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute
                    name="decoration-danger"
                >product_expiry_alert == True</attribute>
            </xpath>
            <field name="create_date" position="after">
                <field name="expiry_date" />
                <field name="product_expiry_alert" invisible="1" />
            </field>
        </field>
    </record>

</odoo>
