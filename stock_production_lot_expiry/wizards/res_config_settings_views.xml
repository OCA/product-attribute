<odoo>
    <record model="ir.ui.view" id="stock_config_settings_form_view">
        <field
            name="name"
        >stock.config.settings.form (in stock_production_lot_expiry)</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form" />
        <field name="arch" type="xml">
           <xpath
                expr='//label[@for="module_product_expiry"]/parent::div'
                position='after'
            >
                <div
                    class="o_setting_right_pane"
                    attrs="{'invisible': [('module_product_expiry', '=', False)]}"
                >
                    <label for="production_lot_expiry_date_field" />
                    <div class="text-muted">
                        Set the field name used as expiration date on lots &amp; serial numbers
                    </div>
                     <div class="content-group">
                         <div class="mt16">
                            <field name="production_lot_expiry_date_field" />
                         </div>
                    </div>
               </div>
           </xpath>
        </field>
    </record>
</odoo>
