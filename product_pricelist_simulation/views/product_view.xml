<odoo>

<record id="product_template_form_view_pricelist_simulation"
        model="ir.ui.view">
    <field name="model">product.template</field>
    <field name="inherit_id"
           ref="product.product_template_form_view"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='item_ids']/.." position="after">
            <group string="Pricelist simulation">
                <field name="pricelist_simulate" widget="html" nolabel="1"/>
            </group>
        </xpath>
    </field>
</record>

</odoo>
