<odoo>
    <record id="product_template_form_view_pricelist_simulation" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button
                    string="See Price per Pricelist"
                    name="%(pricelist_simulation_action)d"
                    type="action"
                />
            </xpath>
        </field>
    </record>
</odoo>
