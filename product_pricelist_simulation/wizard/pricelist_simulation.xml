<odoo>
    <record id="view_pricelist_simulation_view_form" model="ir.ui.view">
        <field name="name">pricelist.simulation.form</field>
        <field name="model">pricelist.simulation</field>
        <field name="arch" type="xml">
            <form>
                <field name="variant_count" invisible="1" />
                <field name="line_ids" nolabel="1">
                    <tree editable="bottom" create="0" edit="0" delete="0">
                        <field
                            name="product_id"
                            attrs="{'column_invisible': [('parent.variant_count', '=', 1)]}"
                        />
                        <field name="pricelist_id" />
                        <field name="price" />
                    </tree>
                </field>
                <footer>
                    <button string="Close" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="pricelist_simulation_action" model="ir.actions.act_window">
        <field name="type">ir.actions.act_window</field>
        <field name="name">Price simulation</field>
        <field name="res_model">pricelist.simulation</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
