<odoo>
    <record id="view_product_packaging_level_form" model="ir.ui.view">
        <field name="model">product.packaging.level</field>
        <field
            name="inherit_id"
            ref="product_packaging_level.view_product_packaging_level_form"
        />
        <field name="arch" type="xml">
            <field name="code" position="after">
                <field name="can_be_sold" />
            </field>
        </field>
    </record>

    <record id="view_product_packaging_level_tree" model="ir.ui.view">
        <field name="model">product.packaging.level</field>
        <field
            name="inherit_id"
            ref="product_packaging_level.view_product_packaging_level_tree"
        />
        <field name="arch" type="xml">
            <field name="code" position="after">
                <field name="can_be_sold" />
            </field>
        </field>
    </record>
</odoo>
