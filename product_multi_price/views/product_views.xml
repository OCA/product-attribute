<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_form_view" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_standard_price']" position="after">
                <group name="multi_price" string="Multiple Prices" colspan="4" groups="base.group_user" attrs="{'invisible': [('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}">
                    <field name="price_ids" nolabel="1" widget="one2many_list" context="{'default_product_id': product_variant_id,'tree_view_ref':'product_multi_price.product_multi_price_tree_view2', 'form_view_ref':'product_multi_price.product_multi_price_form_view'}"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="product_variant_easy_edit_view" model="ir.ui.view">
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='packaging']" position="before">
                <group name="multi_price" string="Multiple Prices" colspan="4" groups="base.group_user">
                    <field name="price_ids" nolabel="1" widget="one2many_list" context="{'default_product_id': id,'tree_view_ref':'product_multi_price.product_multi_price_tree_view2', 'form_view_ref':'product_multi_price.product_multi_price_form_view'}"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
