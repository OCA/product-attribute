<odoo>

    <record id="cost_adjustment_line_mrp_view_tree" model="ir.ui.view">
        <field name="name">cost.adjustment.line.mrp.tree</field>
        <field name="model">cost.adjustment.line</field>
        <field name="inherit_id" ref="product_cost_adjustment.cost_adjustment_line_view_tree" />
        <field name="arch" type="xml">
            <field name="total_difference" position="after">
                <field name="production_count" optional="show" readonly="1"/>
                <button name="action_view_production" type="object" icon="fa-list" attrs="{'invisible': [('production_count', '=', 0)]}"/>
                <field name="bom_count" optional="show" attrs="{'readonly': [('state', '=', 'posted')]}" readonly="1"/>
                <button name="action_view_bom" type="object" icon="fa-list" attrs="{'invisible': [('bom_count', '=', 0)]}"/>
            </field>
        </field>
    </record>

</odoo>
