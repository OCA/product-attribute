<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">Add Tags to Configuration</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="product.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='product_general_settings']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" name="product_tags_config">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Product Tags</span>
                        <div class="text-muted">
                            Manage Product Tags
                        </div>
                        <div class="content-group">
                            <div class="mt16">
                                <button name="%(product_template_tag_act_window)d" icon="fa-arrow-right" type="action" string="Product Tags" class="btn-link"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
