<odoo>
    <!--    Product attribute net color   -->
    <record id="product_attribute_net_color" model="product.attribute">
        <field name="name">net color</field>
        <field name="display_type">select</field>
        <field name="create_variant">no_variant</field>
    </record>
    <record id="product_attribute_net_color_value_blue" model="product.attribute.value">
        <field
            name="attribute_id"
            ref="product_pricelist_items_menu.product_attribute_net_color"
        />
        <field name="name">Blue (net color)</field>
    </record>
    <record
        id="product_attribute_net_color_value_yellow"
        model="product.attribute.value"
    >
        <field
            name="attribute_id"
