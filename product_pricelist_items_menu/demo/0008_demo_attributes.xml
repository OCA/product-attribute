        />
        <field name="name">Orange (net color)</field>
    </record>
    <record
        id="product_attribute_net_color_value_green"
        model="product.attribute.value"
    >
        <field
            name="attribute_id"
            ref="product_pricelist_items_menu.product_attribute_net_color"
        />
        <field name="name">Green (net color)</field>
    </record>
