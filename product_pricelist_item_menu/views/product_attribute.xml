<?xml version="1.0" ?>
<odoo>
    <!--#####################
        # Product Attribute #
        #####################-->
    <!--## Form ##-->
    <record id="ooops_product_attribute_form" model="ir.ui.view">
        <field name="name">ooops.product.attribute.form</field>
        <field name="model">product.attribute</field>
        <field name="inherit_id" ref="product.product_attribute_view_form" />
        <field name="arch" type="xml">
            <!-- Dimension -->
            <field name="create_variant" position="after">
                <field name="dimension" />
            </field>
            <!-- Add UOM -->
            <xpath
                expr="//field[@name='value_ids']/tree/field[@name='name']"
                position="after"
            >
                <field name="uom_id" />
            </xpath>
        </field>
    </record>
</odoo>
