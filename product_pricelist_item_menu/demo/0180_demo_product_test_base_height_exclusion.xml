<odoo>
    0180_demo_product_test_base_height_exclusion.xml
    <!--    Product test base height exclusion    -->
    <record id="product_template_test_base_height_exclusion" model="product.template">
        <field name="name">test base height exclusion</field>
        <field name="type">product</field>
        <field name="list_price">0.0</field>
        <field
            name="categ_id"
            ref="ooops_dimensions_core.product_category_dimension_exclusion_products"
        />
    </record>
    <record
        id="product_template_attribute_line_test_base_height_exclusion_1"
        model="product.template.attribute.line"
    >
        <field
            name="product_tmpl_id"
            ref="ooops_dimensions_core.product_template_test_base_height_exclusion"
        />
        <field
            name="attribute_id"
            ref="ooops_dimensions_core.product_attribute_height"
        />
        <field
            name="value_ids"
            eval="[
                (4, ref('ooops_dimensions_core.product_attribute_value_height_mm'))
            ]"
        />
    </record>
    <record
        id="product_template_attribute_line_test_base_height_exclusion_2"
        model="product.template.attribute.line"
    >
        <field
            name="product_tmpl_id"
            ref="ooops_dimensions_core.product_template_test_base_height_exclusion"
        />
        <field
            name="attribute_id"
            ref="ooops_dimensions_core.product_attribute_width"
        />
        <field
            name="value_ids"
            eval="[
                (4, ref('ooops_dimensions_core.product_attribute_value_width_mm'))
            ]"
        />
    </record>
    <record
        id="product_template_attribute_line_test_base_height_exclusion_3"
        model="product.template.attribute.line"
    >
        <field
            name="product_tmpl_id"
            ref="ooops_dimensions_core.product_template_test_base_height_exclusion"
        />
        <field
            name="attribute_id"
            ref="ooops_configurator.product_attribute_net_color"
        />
        <field
            name="value_ids"
            eval="[
                (4, ref('ooops_configurator.product_attribute_net_color_value_blue')),
                (4, ref('ooops_configurator.product_attribute_net_color_value_yellow'))
            ]"
        />
    </record>
    <record
        id="product_template_attribute_line_test_base_height_exclusion_4"
        model="product.template.attribute.line"
    >
        <field
            name="product_tmpl_id"
            ref="ooops_dimensions_core.product_template_test_base_height_exclusion"
        />
        <field
            name="attribute_id"
            ref="ooops_configurator.product_attribute_aluminium_color"
        />
        <field
            name="value_ids"
            eval="[
                (4, ref('ooops_configurator.product_attribute_aluminium_color_value_grey')),
                (4, ref('ooops_configurator.product_attribute_aluminium_color_value_black')),
            ]"
        />
    </record>
    <function model="product.template" name="_create_variant_ids">
        <function
            model="product.template"
            name="search"
            eval="[
                [
                    ('id', '=', ref('ooops_dimensions_core.product_template_test_base_height_exclusion')),
                ]
            ]"
        />
    </function>
</odoo>
