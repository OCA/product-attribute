<odoo>
    <record
        id="product_template_test_base_height_and_width_exclusion"
        model="product.template"
    >
        <field name="name">test base height and width exclusion</field>
        <field name="type">product</field>
        <field name="list_price">0.0</field>
        <field
            name="categ_id"
            ref="ooops_dimensions_core.product_category_dimension_exclusion_products"
        />
    </record>
    <record
        id="test_base_height_and_width_exclusion_attribute_line_height"
        model="product.template.attribute.line"
    >
        <field
            name="product_tmpl_id"
            ref="ooops_dimensions_core.product_template_test_base_height_and_width_exclusion"
        />
        <field
            name="attribute_id"
            ref="ooops_dimensions_core.product_attribute_height"
        />
        <field
            name="value_ids"
            eval="[
                    (4, ref('ooops_dimensions_core.product_attribute_value_height_mm'))
                ]"
        />
    </record>
    <record
        id="test_base_height_and_width_exclusion_attribute_line_width"
        model="product.template.attribute.line"
    >
        <field
            name="product_tmpl_id"
            ref="ooops_dimensions_core.product_template_test_base_height_and_width_exclusion"
        />
        <field name="attribute_id" ref="product_attribute_width" />
        <field
            name="value_ids"
            eval="[
                    (4, ref('ooops_dimensions_core.product_attribute_value_width_mm'))
                ]"
        />
    </record>
    <record
        id="test_base_height_and_width_exclusion_attribute_line_net_color"
        model="product.template.attribute.line"
    >
        <field
            name="product_tmpl_id"
            ref="ooops_dimensions_core.product_template_test_base_height_and_width_exclusion"
        />
        <field
            name="attribute_id"
            ref="ooops_configurator.product_attribute_net_color"
        />
        <field
            name="value_ids"
            eval="[
                    (4, ref('ooops_configurator.product_attribute_net_color_value_blue')),
                    (4, ref('ooops_configurator.product_attribute_net_color_value_yellow'))
                ]"
        />
    </record>
    <record
        id="test_base_height_and_width_exclusion_attribute_line_aluminium_color"
        model="product.template.attribute.line"
    >
        <field
            name="product_tmpl_id"
            ref="ooops_dimensions_core.product_template_test_base_height_and_width_exclusion"
        />
        <field
            name="attribute_id"
            ref="ooops_configurator.product_attribute_aluminium_color"
        />
        <field
            name="value_ids"
            eval="[
                    (4, ref('ooops_configurator.product_attribute_aluminium_color_value_grey')),
                    (4, ref('ooops_configurator.product_attribute_aluminium_color_value_black')),
                ]"
        />
    </record>
    <function model="product.template" name="_create_variant_ids">
        <function
            model="product.template"
            name="search"
            eval="[
                    [
                        ('id', '=', ref('ooops_dimensions_core.product_template_test_base_height_and_width_exclusion')),
                    ]
                ]"
        />
    </function>
</odoo>
