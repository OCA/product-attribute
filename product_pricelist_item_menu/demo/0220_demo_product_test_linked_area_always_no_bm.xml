<odoo>
    <record
        id="product_template_test_linked_area_always_no_bm"
        model="product.template"
    >
        <field name="name">test linked area always no BM</field>
        <field name="type">product</field>
        <field name="list_price">0</field>
    </record>
    <record
        id="test_linked_area_always_no_bm_attribute_line_height"
        model="product.template.attribute.line"
    >
        <field
            name="product_tmpl_id"
            ref="ooops_dimensions_core.product_template_test_linked_area_always_no_bm"
        />
        <field
            name="attribute_id"
            ref="ooops_dimensions_core.product_attribute_height"
        />
        <field
            name="value_ids"
            eval="[
                (4, ref('ooops_dimensions_core.product_attribute_value_height_mm'))
            ]"
        />
    </record>
    <record
        id="test_linked_area_always_no_bm_attribute_line_width"
        model="product.template.attribute.line"
    >
        <field
            name="product_tmpl_id"
            ref="ooops_dimensions_core.product_template_test_linked_area_always_no_bm"
        />
        <field
            name="attribute_id"
            ref="ooops_dimensions_core.product_attribute_width"
        />
        <field
            name="value_ids"
            eval="[
                (4, ref('product_attribute_value_width_mm'))
            ]"
        />
    </record>
    <record
        id="test_linked_area_always_no_bm_attribute_line_net_color"
        model="product.template.attribute.line"
    >
        <field
            name="product_tmpl_id"
            ref="ooops_dimensions_core.product_template_test_linked_area_always_no_bm"
        />
        <field
            name="attribute_id"
            ref="ooops_configurator.product_attribute_net_color"
        />
        <field
            name="value_ids"
            eval="[
                    (4, ref('ooops_configurator.product_attribute_net_color_value_blue')),
                    (4, ref('ooops_configurator.product_attribute_net_color_value_yellow'))
                ]"
        />
    </record>

    <record
        id="test_linked_area_always_no_bm_attribute_line_aluminium_color"
        model="product.template.attribute.line"
    >
        <field
            name="product_tmpl_id"
            ref="ooops_dimensions_core.product_template_test_linked_area_always_no_bm"
        />
        <field
            name="attribute_id"
            ref="ooops_configurator.product_attribute_aluminium_color"
        />
        <field
            name="value_ids"
            eval="[
                    (4, ref('ooops_configurator.product_attribute_aluminium_color_value_grey')),
                    (4, ref('ooops_configurator.product_attribute_aluminium_color_value_black'))
                ]"
        />
    </record>
    <function model="ir.model.data" name="_update_xmlids">
        <value
            model="base"
            eval="[{
                'xml_id': 'ooops_dimensions_core.product_template_test_linked_area_always_no_bm_attribute_aluminium_color_value_grey',
                'record': obj().env['product.template.attribute.value'].search([
                    ('product_tmpl_id','=',obj().env.ref('ooops_dimensions_core.product_template_test_linked_area_always_no_bm').id),
                    ('attribute_id','=',obj().env.ref('ooops_configurator.product_attribute_aluminium_color').id),
                    ('product_attribute_value_id','=',obj().env.ref('ooops_configurator.product_attribute_aluminium_color_value_grey').id),
                ]),
                'noupdate': True,
            }]"
        />
    </function>
    <record
        id="product_template_test_linked_area_always_no_bm_attribute_aluminium_color_value_grey"
        model="product.template.attribute.value"
    >
        <field
            name="extra_price_product_tmpl_id"
            ref="ooops_configurator.product_template_test_product_link_10"
        />
        <field name="price_type">product_area_wh</field>
        <field name="using_uom" ref="ooops_dimensions_core.product_uom_m2" />
    </record>
</odoo>
