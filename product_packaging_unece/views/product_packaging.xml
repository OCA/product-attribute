<odoo>
    <record id="product_packaging_tree_view" model="ir.ui.view">
        <field name="name">product.packaging.tree.view</field>
        <field name="model">product.packaging</field>
        <field
            name="inherit_id"
            ref="product_packaging_type.product_packaging_tree_view_inherit"
        />
        <field name="arch" type="xml">
            <field name="name" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="name" position="before">
                <field name="display_name" string="Packaging" />
            </field>
            <field name="packaging_type_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
        </field>
    </record>
    <record id="product_packaging_tree_view2" model="ir.ui.view">
        <field name="name">product.packaging.tree.view2</field>
        <field name="model">product.packaging</field>
        <field name="inherit_id" ref="product.product_packaging_tree_view2" />
        <field name="arch" type="xml">
            <field name="name" position="before">
                <field name="packaging_type_id" position="move" />
            </field>
            <field name="packaging_type_id" position="attributes">
                <attribute name="invisible">0</attribute>
            </field>
        </field>
    </record>
    <record id="view_product_packaging_add_type_form" model="ir.ui.view">
        <field name="name">view.product.packaging.add.type.form</field>
        <field name="model">product.packaging</field>
        <field
            name="inherit_id"
            ref="product_packaging_type.view_product_packaging_add_type_form"
        />
        <field name="arch" type="xml">
            <field name="name" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="name" position="after">
                <field name="packaging_type_id" position="move" />
            </field>
        </field>
    </record>
</odoo>
