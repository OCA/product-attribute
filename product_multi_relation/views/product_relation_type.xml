<?xml version="1.0" encoding="UTF-8"?>
<odoo>

        <record id="tree_product_relation_type" model="ir.ui.view">
            <field name="model">product.relation.type</field>
            <field type="xml" name="arch">
                <tree>
                    <field name="name" />
                    <field name="name_inverse" />
                    <field name="product_type_left" />
                    <field name="product_type_right" />
                    <field name="allow_self" />
                    <field name="is_symmetric" />
                </tree>
            </field>
        </record>

        <record id="form_product_relation_type" model="ir.ui.view">
            <field name="model">product.relation.type</field>
            <field type="xml" name="arch">
                <form>
                    <sheet>
                        <group>
                            <group
                                string="Left side of relation"
                                name="left"
                                >
                                <field name="name" />
                                <field name="product_type_left" />
                                <field name="product_category_left" />
                            </group>
                            <group
                                string="Right side of relation"
                                name="right"
                                attrs="{'invisible': [('is_symmetric', '=', True)]}"
                                >
                                <field name="name_inverse" attrs="{'required': [('is_symmetric', '=', False)]}"/>
                                <field name="product_type_right" />
                                <field name="product_category_right" />
                            </group>
                        </group>
                        <group
                            name="properties"
                            string="Properties"
                            colspan= "6" col="4"
                            >
                            <field name="allow_self" />
                            <field name="is_symmetric" />
                            <field name="handle_invalid_onchange" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

</odoo>
