<odoo>
    <record model="ir.module.category" id="module_category_rating_moderation">
        <field name="name">Rating moderation</field>
        <field name="sequence">30</field>
    </record>
    <record id="group_rating_moderation" model="res.groups">
        <field name="name">Rating Moderator</field>
        <field name="category_id" ref="module_category_rating_moderation" />
        <field
            name="users"
            eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"
        />
    </record>
    <record model="ir.model.access" id="access_rating_moderator">
        <field name="name">rating.rating.moderator</field>
        <field name="model_id" ref="rating.model_rating_rating" />
        <field name="group_id" ref="rating_moderation.group_rating_moderation" />
        <field name="perm_create" eval="1" />
        <field name="perm_read" eval="1" />
        <field name="perm_write" eval="1" />
        <field name="perm_unlink" eval="1" />
    </record>
</odoo>
