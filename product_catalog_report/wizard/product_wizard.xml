<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_partner_product_catalog_view" model="ir.ui.view">
        <field name="name">Partner Product Catalog</field>
        <field name="model">res.partner.product_catalog</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Choose catalog preferencies">
                <separator string="Select a printing language " colspan="4" />
                <field name="report_lang" />
                <separator string="Select a Product Categories " colspan="4" />
                <field name="categories" colspan="4" nolabel="1" />
                <footer>
                    <button
                        name="create_product_catalog"
                        string="Print Product Catalog"
                        type="object"
                        default_focus="1"
                        class="oe_highlight"
                    />
                    <button
                        special="cancel"
                        string="Cancel"
                        class="btn btn-secondary"
                    />
                </footer>
            </form>
        </field>
    </record>
    <record id="action_res_partner_product_catalog" model="ir.actions.act_window">
        <field name="name">Partner Product Catalog</field>
        <field name="res_model">res.partner.product_catalog</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="res_partner_product_catalog_view" />
        <field name="context">{'record_id': active_id}</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="base.model_res_partner" />
    </record>
</odoo>
