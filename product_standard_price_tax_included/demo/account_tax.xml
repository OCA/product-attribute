<odoo>

    <record id="account_tax_tax_included" model="account.tax">
        <field name="name">Sale Tax 20% (Tax Included)</field>
        <field name="type_tax_use">sale</field>
        <field name="amount_type">percent</field>
        <field name="amount">20</field>
        <field name="price_include" eval="True" />
    </record>

    <record id="account_tax_tax_excluded" model="account.tax">
        <field name="name">Sale Tax 20% (Tax Excluded)</field>
        <field name="type_tax_use">sale</field>
        <field name="amount_type">percent</field>
        <field name="amount">20</field>
        <field name="price_include" eval="False" />
    </record>

</odoo>
