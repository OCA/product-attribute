<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

    <record id="view_purchase_form_context_supplierinfo" model="ir.ui.view">
        <field name="name">purchase.order.form.context.supplierinfo</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree//field[@name='product_id']" position="attributes">
                <attribute name="context">{'partner_id': parent.partner_id, 'quantity': product_qty,
                'uom': product_uom, 'company_id': parent.company_id}</attribute>
            </xpath>
        </field>
    </record>

</data>
</openerp>
