<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">Add Tags Group to Configuration</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="product_template_tags.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='product_tags_config']//button[hasclass('btn-link')]" position="after">
                <button name="%(product_template_tag_group_action)d" icon="fa-arrow-right" type="action" string="Tags Groups" class="btn-link"/>
            </xpath>
        </field>
    </record>
</odoo>
