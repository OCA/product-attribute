<odoo>
    <record id="product_template_tag_group_form_view" model="ir.ui.view">
        <field name="name">Form view for Product Tag Group</field>
        <field name="model">product.template.tag.group</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="company_id"
                               options="{'no_create_edit': True}"
                               groups="base.group_multi_company"/>
                    </group>
                    <notebook>
                        <page name="tags" string="Tags">
                            <field name="tag_ids">
                                <tree editable="top">
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="product_template_tag_group_action" model="ir.actions.act_window">
        <field name="name">Product Tag Groups</field>
        <field name="res_model">product.template.tag.group</field>
        <field name="view_mode">tree,form</field>
        <field name="view_type">form</field>
    </record>
</odoo>
