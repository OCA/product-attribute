<odoo noupdate="1">
    <record id="product_template_tag_group_rule_company" model="ir.rule">
        <field name="name">Multi-company for Product Tag Group</field>
        <field name="model_id" ref="model_product_template_tag_group"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_unlink" eval="1"/>
        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'child_of', [user.company_id.id])]</field>
    </record>
</odoo>
