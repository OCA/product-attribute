<odoo>

<record model="ir.ui.view" id="product_bundle_line_form">
    <field name="name">product.bundle.line.form</field>
    <field name="model">product.bundle.line</field>
    <field name="type">form</field>
    <field name="arch" type="xml">
        <form string="Bundle Product Line">
            <group>
                <field name="bundle_id"/>
                <field name="product_id"/>
                <field name="qty"/>
                <field name="total_lst_price"/>
            </group>
        </form>
    </field>
</record>

<record model="ir.ui.view" id="product_bundle_line_tree">
    <field name="name">product.bundle.line.tree</field>
    <field name="model">product.bundle.line</field>
    <field name="type">tree</field>
    <field name="arch" type="xml">
        <tree string="Bundle Product Lines" editable="bottom">
            <field name="bundle_id"/>
            <field name="product_id"/>
            <field name="qty"/>
            <field name="total_lst_price"/>
        </tree>
    </field>
</record>

</odoo>
