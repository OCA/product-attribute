<odoo>
    <record id="view_product_application_form" model="ir.ui.view">
        <field name="name">product.application.form</field>
        <field name="model">product.application</field>
        <field name="inherit_id" ref="product_application.view_product_application_form" />
        <field name="arch" type="xml">
            <group name="base" position="after">
                <group name="group_custom_info_product_application">
                    <group>
                    <field name="custom_info_template_id"
                           options='{"no_quick_create": True}'
                    />
                    </group>
                    <field name="custom_info_ids"
                           colspan="4"
                           nolabel="1"
                           context="{'embed': True, 'tree_view_ref': 'base_custom_info.custom_info_value_tree'}"
                    />
                </group>
            </group>
        </field>
    </record>
</odoo>
